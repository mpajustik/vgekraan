# Enable WSGI
AddHandler wsgi-script .wsgi

# Set the WSGI application file
WSGIScriptAlias / /home/username/public_html/myapp/myapp.wsgi

<Directory /home/username/public_html/myapp>
    Require all granted
</Directory>

# Set the Python environment variables if needed
SetEnv FLASK_ENV production
SetEnv APP_CONFIG_FILE /path/to/config.py